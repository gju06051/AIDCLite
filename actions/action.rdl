#!/bin/bash

# $@: forward all input arguments to VCS
peakrdl regblock ${WORKING_DIR}/registers/systemRDL/AIDC_LITE.rdl --top AIDC_LITE_COMP_CFG   -o ${WORKING_DIR}/design/sverilog/ --cpuif apb3-flat --peakrdl-cfg ${WORKING_DIR}/registers/systemRDL/peakrdl.toml
peakrdl regblock ${WORKING_DIR}/registers/systemRDL/AIDC_LITE.rdl --top AIDC_LITE_DECOMP_CFG -o ${WORKING_DIR}/design/sverilog/ --cpuif apb3-flat --peakrdl-cfg ${WORKING_DIR}/registers/systemRDL/peakrdl.toml

peakrdl html ${WORKING_DIR}/registers/systemRDL/AIDC_LITE.rdl --top AIDC_LITE_COMP_CFG   -o ${WORKING_DIR}/docs/regMapComp/
peakrdl html ${WORKING_DIR}/registers/systemRDL/AIDC_LITE.rdl --top AIDC_LITE_DECOMP_CFG -o ${WORKING_DIR}/docs/regMapDecomp/

